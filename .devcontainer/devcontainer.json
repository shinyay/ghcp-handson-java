{
  "name": "Playground - java",
  "dockerComposeFile": "compose.yaml",
  "service": "playground-java",
  "workspaceFolder": "/workspace",
  "remoteUser": "javadev",

  // Dev Container Features
  // https://containers.dev/features
  "features": {
    "ghcr.io/devcontainers/features/java:1.6.0": {
      "version": "latest",
      "installMaven": "true",
      "mavenVersion": "latest",
      "installGradle": "true",
      "gradleVersion": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/ki-sdkman:2.0.14": {
      "version": "latest",
      "jdkVersion": "latest",
      "jdkDistro": "open"
    },
    "ghcr.io/devcontainers-contrib/features/kotlin-sdkman:2.0.14": {
      "version": "latest",
      "jdkVersion": "latest",
      "jdkDistro": "open"
    }
  },


  "customizations": {
    "vscode": {
      "settings": {
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.format.settings.url": ".vscode/java-formatter.xml",
        "java.format.settings.profile": "GoogleStyle",
        "java.import.gradle.enabled": true,
        "java.import.maven.enabled": true,
        "java.project.importOnFirstTimeStartup": "auto",
        "java.project.importOnStartup": "auto",
        "java.project.updateImportsOnFileRename.enabled": "auto",
        "java.project.updateImportsOnFileRename.fileGlob": "auto",
        "java.project.updateImportsOnFileRename.trigger": "auto",
        "java.project.updateImportsOnFileSave.enabled": "auto",
        "java.project.updateImportsOnFileSave.trigger": "auto",
        "java.project.updateImportsOnPaste.enabled": "auto",
        "java.project.updateImportsOnPaste.trigger": "auto",
        "java.project.updateImportsOnPaste.fileGlob": "auto",
        "java.project.updateImportsOnPaste.excludedFiles": "auto",
        "java.project.updateImportsOnPaste.excludedFolders": "auto",
        "java.project.updateImportsOnPaste.excludedGlobs": "auto",
        "java.project.updateImportsOnPaste.excludedFileGlobs": "auto",
        "java.project.updateImportsOnPaste.excludedFolderGlobs": "auto",
        "java.project.updateImportsOnPaste.excludedGlobPatterns": "auto",
        "java.project.updateImportsOnPaste.excludedFileGlobPatterns": "auto",
        "java.project.updateImportsOnPaste.excludedFolderGlobPatterns": "auto",
        "extensions": [
          "vscjava.vscode-java-pack",
          "redhat.java",
          "vscjava.vscode-maven",
          "vscjava.vscode-java-debug",
          "vscjava.vscode-java-test",
          "vscjava.vscode-java-dependency"
        ]
      }
    }
  },
  "postCreateCommand": "mvn clean install"
}
